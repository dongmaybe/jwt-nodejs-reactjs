<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class = "user-infor-container">
   
        <form method="POST" action="/users/create-use">
            
                <div class="">
                    <h3 class="mt-3 ">
                        Create New User:
                    </h3>
                </div>
            <div class="mb-3 mt-3 col-6">
                <label for="email" class="form-label">Email address</label>
                <input type="email" name="email" class="form-control" id="email"  required>
            </div>
            <div class="col-6"></div>
            <div class="mb-3 col-6">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" class="form-control" id="username" required>
            </div>
            <div class="col-6"></div>
            <div class="mb-3 col-6">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" class="form-control" id="password" required>
            </div>
            <div class="col-6"></div>
            <div class="col-12"><button type="submit" class="btn btn-primary">Submit</button></div>
                
           
        </form>  
    
   </div>
   <div class="table-user">
    <h3 class="mt-3"> Table users:</h3>
    <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Email</th>
            <th scope="col">Username</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
            <% UserList.forEach(function(item,index){ %>
                <tr>
                <th scope="row"><%=item.id%></th>
                <td><%=item.email%></td>
                <td><%=item.username%></td>
                <td>
                    <a class="btn btn-warning" href="/update-user/<%=item.id%>">
                        Edit
                    </a>
                   
                     <form style="display: inline;" action="/delete-user/<%=item.id%>" method="POST">
                            <button class="btn btn-danger" type="submit">Delete</button>
                     </form>
                    
                </td>
                </tr>
                
            <% }) %>
        </tbody>
      </table>
   </div>  
    </div>  
    </div>
    
</body>
</html>